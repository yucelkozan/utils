<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="CustomAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
    </style>



    <style name="CustomBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>




    <style name="CustomToolbarTitle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/mont_semi_bold</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="ToolbarUpAndText" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!-- This attributes is used by title -->
        <item name="android:textColorPrimary">@color/mf_color_1</item>
        <!-- This attributes is used by navigation icon and overflow icon -->
        <item name="colorOnPrimary">@color/mf_color_1</item>
    </style>



    <style name="myFullScreenDialogStyle" parent="Theme.LearnLanguage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="MyCustomDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="colorPrimary">@color/whatsapp</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>





</resources>